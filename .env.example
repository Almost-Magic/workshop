# The Workshop — Environment Configuration
# Copy to .env and adjust as needed.

# Workshop API
AMTL_WKS_PORT=5003
AMTL_WKS_HOST=127.0.0.1
AMTL_WKS_LOG_LEVEL=INFO

# Health checks & self-healing
AMTL_WKS_HEALTH_INTERVAL=30
AMTL_WKS_RESTART_ATTEMPTS=3
AMTL_WKS_RESTART_DELAY=10

# Heartbeat
AMTL_WKS_HEARTBEAT_HOURS=24

# Theme
AMTL_WKS_THEME_FILE=~/.amtl/workshop-theme.json

# Integration — Supervisor
AMTL_SUPERVISOR_URL=http://localhost:9000

# Integration — ELAINE
AMTL_ELAINE_URL=http://localhost:5000

# Integration — Foreperson
AMTL_FOREPERSON_URL=http://localhost:9100
